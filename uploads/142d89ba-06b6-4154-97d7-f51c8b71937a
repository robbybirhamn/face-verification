    <script src="http://localhost:8000/assets/js/tabler.min.js?1674944402" defer></script>
    <script src="http://localhost:8000/assets/js/demo.min.js?1674944402" defer></script>

    <script>
      function resetErrors() {
        $('.is-invalid').removeClass('is-invalid');
        $('.invalid-feedback').remove();
      }
      function setErrors(errors) {
        resetErrors();
        $.each(errors, function(index, value) {
          $("#input-"+index).addClass('is-invalid');
          $("#input-"+index).after(`<div class="invalid-feedback">`+value+`</div>`);
        });
      }
      $(document).ready(function() {
        $('#btn-login').click(function() {
          axios.post('http://localhost:8000/login', {
            email: $('#input-email').val(),
            password: $('#input-password').val(),
            remember: $('#input-remember').val(),
            captcha: $('#input-captcha').val(),
          })
          .then(function (response) {
            Swal.fire(
              'Berhasil!',
              response.data.message,
              'success'
            ).then(function(){
              document.location.href='/';
            })
          })
          .catch(function (error) {
            setErrors(error.response.data.errors);
            document.location.reload();
          });
        });
      });
    </script>
